<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.icf.tripappclient.TicketInfo"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/valid_from"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticketTitle" />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/valid_through"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/startDate" />

    <ImageView
        android:id="@+id/qrExample"
        android:layout_width="207dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/qr_example"
        app:layout_constraintHorizontal_bias="0.828"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ticketTitle"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/ticket_title"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textAlignment="center"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/ticketsNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/number_of_tickets"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endDate" />

    <TextView
        android:id="@+id/ticketPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/black"
        android:text="@string/ticket_price_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticketsNumber" />

    <TextView
        android:id="@+id/dateFromValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="21.12.2012. 20:53"
        app:layout_constraintTop_toBottomOf="@+id/ticketTitle"
        app:layout_constraintLeft_toRightOf="@+id/startDate"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/dateToValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="21.12.2012. 21:53"
        app:layout_constraintTop_toBottomOf="@+id/dateFromValue"
        app:layout_constraintLeft_toRightOf="@+id/endDate"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tiketsNumberValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="1"
        app:layout_constraintLeft_toRightOf="@+id/ticketsNumber"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/dateToValue" />

    <TextView
        android:id="@+id/ticketPriceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:text="1.20 EUR"
        app:layout_constraintLeft_toRightOf="@+id/ticketPrice"
        app:layout_constraintTop_toBottomOf="@+id/tiketsNumberValue" />

</android.support.constraint.ConstraintLayout>
