<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollHorizontally="false"
    tools:context="com.example.icf.tripappclient.fragments.TicketPurchaseVertical"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ticket"
        android:id="@+id/imageView" />

    <TextView
        android:id="@+id/durationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/durationValue"
        android:text="@string/ticket_duration" />

    <TextView
        android:id="@+id/durationValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/priceValue"
        android:layout_toRightOf="@+id/durationLabel"
        android:textSize="18dp"
        android:text="This ticket last for 24 hours" />

    <TextView
        android:id="@+id/priceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/priceValue"
        android:layout_alignBaseline="@+id/priceValue"
        android:text="@string/ticket_price" />

    <TextView
        android:id="@+id/priceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/durationLabel"
        android:layout_marginTop="15dp"
        android:layout_above="@+id/numberLabel"
        android:textSize="19dp"
        android:text="10.99" />

    <TextView
        android:id="@+id/priceCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/priceValue"
        android:layout_toRightOf="@+id/priceValue"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/priceValue"
        android:text="@string/eur" />

    <TextView
        android:id="@+id/numberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/priceLabel"
        android:text="@string/no_of_cards"
        android:layout_marginTop="18dp"
        android:layout_above="@+id/totalValue" />
        <!--android:layout_alignBaseline="@+id/priceValue"-->

    <EditText
        android:id="@+id/numberValue"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/durationLabel"
        android:layout_alignBaseline="@+id/numberLabel"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:padding="7dp"
        android:inputType="number"
        android:textSize="18dp"
        android:text="1"/>

    <TextView
        android:id="@+id/totalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/totalValue"
        android:layout_alignBaseline="@+id/totalValue"
        android:text="@string/total_price" />

    <TextView
        android:id="@+id/totalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/totalCurrency"
        android:layout_marginTop="15dp"
        android:layout_above="@+id/buyButton"
        android:textSize="25dp"
        android:text="10.99" />

    <TextView
        android:id="@+id/totalCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/totalValue"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/totalValue"
        android:text="@string/eur" />

    <Button
        android:id="@+id/buyButton"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/reminder"
        android:layout_marginTop="15dp"
        android:text="@string/buy_ticket" />

    <TextView
        android:id="@+id/reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:text="@string/keep_in_mind" />

</RelativeLayout>
